{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <table class="table">
            <thead class="bg-danger">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Nombre de cadeaux</th>
                <th scope="col">Show</th>
            </tr>
            </thead>
            <tbody class="">

            {% for user in users %}
                <tr>
                    <th scope="row">{{ number }}</th>
                    <td>{{ user }}</td>
                    <td>{{ user.listCadeaux | length }}</td>
                    <td>
                        <p><a href="{{ path('app_list_cadeaux')}}"><button class="btn btn-success btn-xs" ><i class="fas fa-eye"></i></button></a></p>
                    </td>
                </tr>
                {% set number = number + 1 %}
            {% endfor %}
            </tbody>
        </table>

</div>
{% endblock %}
