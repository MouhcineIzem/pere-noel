{% extends 'base.html.twig' %}

{% block title %}List des commades{% endblock %}

{% block body %}
<div class="d-flex bd-highlight mb-3">

    {% include 'admin/sidebar.html.twig' %}

    <div class="example-wrapper">

        <div class="container text-center p-4">
            <h3>Les commandes en cours: </h3>
        </div>

        <table class="table">
            <thead class="bg-warning">
            <tr>
                <th scope="col">#</th>
                <th scope="col">N° commande</th>
                <th scope="col">Person</th>
                <th scope="col">Crée le</th>
                <th scope="col">Etat de Commande</th>
                <th scope="col">Voir</th>
            </tr>
            </thead>
            <tbody class="">
            {% for index,item in paniers %}
            <tr>
                    <td>{{ index + 1 }}</td>
                    <td>{{ item.id }}</td>
                    <td>{{ item.person }}</td>
                    <td>{{ item.createdAt | date }}</td>
                {% if item.isValidated %}
                    <td class="text-center text-success"><i class="fas fa-check-circle"></i></td>
                {% else %}
                    <td class="text-center text-danger"><i class="fas fa-check-circle"></i></td>
                {% endif %}
                    <td>
                        <a class="btn btn-info my-2" href="{{ path('panier_admin', {'id': item.person.id}) }}">Détail</a>
                    </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
