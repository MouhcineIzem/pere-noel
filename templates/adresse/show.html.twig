{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block body %}
    <h1 class="container text-center p-4">Adresse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adresse.id }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ adresse.rue }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ adresse.numero }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ adresse.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ adresse.ville }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info mx-3 my-2" href="{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SECRETARIAT") %}{{ path('pereNoel_adresses') }}{% else %}{{ path('home') }}{% endif %}">Retour</a>

    {% if app.user.adresses == adresse %}
        <a  class="btn btn-info"href="{{ path('adresse_edit', {'id': adresse.id}) }}">Modifier</a>
        {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SECRETARIAT") %}
            {{ include('adresse/_delete_form.html.twig') }}
        {% endif %}
    {% endif %}

{% endblock %}
