{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1 class="text-center p-5">Les categories</h1>
            <div class="row my-2" >
        {% for categorie in categories %}

                    <div class="accessory__content  col-md-3 mx-3">
                        <img src="{{ asset("assets/img/accessory1.png") }}" alt="" class="accessory__img">
                        <h3 class="text-center">{{ categorie.name }}</h3>
                    </div>

        {% else %}
            <div>
                <h6 colspan="3">no records found</h6>
            </div>
        {% endfor %}
            </div>


   <a href="{{ path('categorie_new') }}" class="btn btn-info mx-3 my-3">Create new</a>
{% endblock %}
