{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h4 class="text-center p-4">List de mes cadeaux pour Noel</h4>
                {% if panier | length > 0%}
                    <div class="table-responsive">
                        <table id="mytable" class="table table-bordred table-striped">

                            <thead>
                            <th>Image</th>
                            <th>Designation</th>
                            <th>Age</th>
                            <th>Prix</th>
                            <th>User</th>
                            <th>Delete</th>
                            </thead>
                            <tbody>
                            {% set total = null %}
                            {% for item in panier %}
                                <tr>
                                    <td>
                                        <img src="{{ asset("uploads/cadeaux/"~item.cadeau.image) }}" alt=""
                                             class="img-thumbnail img_panier">
                                    </td>
                                    <td>{{ item.cadeau.designation }}</td>
                                    <td>{{ pluriels(item.cadeau.age, 'an') }}</td>
                                    <td>{{ item.cadeau.prix | number_format(2,',','.')}} €</td>
                                    <td>{{ item.person }}</td>
                                    <td><a href="{{ path('panier_delete_from_list', {'id' : item.id}) }}"><button class="btn btn-danger btn-xs" ><i class="fas fa-trash-alt"></i></button></a></td>
                                </tr>
                                {%  set total = item.cadeau.prix + total  %}
                            {% endfor %}
                            </tbody>
                        </table>
                        <table id="mytable" class="table table-bordred table-striped">
                            <thead>
                            <th class="text-primary">Total</th>
                            <th class="text-dark text-right">{{ total | number_format(2,',','.') }} €</th>
                            </thead>
                        </table>
                    </div>
                    {% else %}
                    <div class="text-center my-5">
                        <h3 class="text-warning">Pas de Liste de cadeaux</h3>
                    </div>
                {% endif %}


            </div>
        </div>
    </div>
{% endblock %}
