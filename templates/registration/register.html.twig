{% extends 'base.html.twig' %}

{% block title %}
    {% if app.user %}Modifier
    {% else %}
    S'inscrire
    {% endif %}
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .profile {
            display: block;

        }
    </style>
    {% if app.user %}
        <div class="my-2 profile">
            <a href="{{ path('app_list_cadeaux') }}" class="mx-3">List des mes cadeaux</a>
            <a href="{{ path('profile', {'id': app.user.id}) }}" class="mx-3">Mon - Profil</a>
            <a href="{{ path('adresse_new') }}">Ajouter une adresse</a>
        </div>
    {% endif %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {% for msg in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ msg }}</div>
    {% endfor %}


    <div class="example-wrapper">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm) }}
        <button type="submit" class="btn btn-info btn-block">
                {% if app.user and  app.request.pathInfo == "/update/"~app.user.id %}
                    Modifier
                {% else %}
                    S'inscrire
                {% endif %}
        </button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}

